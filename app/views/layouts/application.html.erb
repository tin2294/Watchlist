<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar navbar-expand-sm bg-light">
      <%= image_tag "movie_icon.png", alt: "movie-icon", width: 40, class: "navbar-brand" %>
      <div class="navbar-nav ml-auto">
        <p class="nav-item m-2"><%= link_to "New List", new_list_path, class:"btn btn-ghost" %></p>
        <p class="nav-item m-2"><%= link_to 'My Lists', lists_path, class:"btn btn-ghost" %></p>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
