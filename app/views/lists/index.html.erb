<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dtmaygdvz/image/upload/v1636715511/pehg3ipznuehbwtlfaks.jpg');">
  <div class="container">
    <h1>My Lists</h1>
  </div>
</div>

<div class="cards m-3">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key, crop: :fill) %>')">
        <%= link_to list.name, list_path(list), class: "card-category" %>
      </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://ctrlr.org/wp-content/uploads/2021/11/fall-movies-index-1628968089.jpg')">
        <%= link_to list.name, list_path(list), class: "card-category" %>
      </div>
    <% end %>

  <% end %>
</div>



